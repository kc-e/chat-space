.main_chat__message_list__menu{data: {message: {id: message.id}}}
  .main_chat__message_list__menu__name
    = message.user.name
  .main_chat__message_list__menu__datetime
    = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
.main_chat__message_list__message{data: {message: {id: message.id}}}
  - if message.content.present?
    %p.main_chat__message_list__message__content
      = message.content
  = image_tag message.image.url, class: 'Message__image' if message.image.present?